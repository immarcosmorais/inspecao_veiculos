<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" height="100%" controllerName="com.sap.build.standard.formInspecaoDeVeiculos.controller.ListarVeiculos">
	<Page showHeader="false" enableScrolling="true" class="sapUiContentPadding" showNavButton="false">
		<content>
			<Table id="listaVistorias" items="{/Vistoria}" mode="MultiSelect">
				<headerToolbar>
					<OverflowToolbar id="otbSubheader">
						<ToolbarSpacer/>
						<SearchField id="idPesquisa">
							<layoutData><OverflowToolbarLayoutData minWidth="200px" maxWidth="300px" shrinkable="true"/></layoutData>
						</SearchField>
						
						<OverflowToolbarButton type="Transparent" text="Filter" icon="sap-icon://filter" press="onFilter"/>
						<OverflowToolbarButton type="Transparent" text="Sort" icon="sap-icon://sort" press="onSort"/>
						<OverflowToolbarButton type="Transparent" text="Group" icon="sap-icon://group-2" press="onGroup"/>
						<OverflowToolbarButton type="Transparent" text="Refresh" icon="sap-icon://refresh" press="onRefresh"/>
						<!--<Button text="Reset" type="Transparent" press="onReset"/>-->
						<OverflowToolbarButton type="Transparent" text="Delete" icon="sap-icon://delete" press="onDelete"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="12em"><Text/></Column>
					<Column minScreenWidth="Tablet" demandPopin="true"><Text text="Vistoria"/></Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End"><Text text="Motorista"/></Column>
					<Column hAlign="End"><Text text="Status"/></Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation">
						<cells>
							<sap.ui.core:Icon xmlns:sap.ui.core="sap.ui.core" ariaLabelledBy="__text0" src="{parts: [{path: 'Status'}], formatter:'com.sap.build.standard.formInspecaoDeVeiculos.controller.Formatter.icon'}" size="2em" id="icon0" color="{parts: [{path: 'Status'}], formatter:'com.sap.build.standard.formInspecaoDeVeiculos.controller.Formatter.color'}"/>
							<ObjectIdentifier title="{Id}" text="{Veiculo}"/>
							<Text text="{Nome}"/>
							<ObjectStatus class="sapUiSmallMarginBottom" text="{parts: [{path: 'Status'}], formatter:'com.sap.build.standard.formInspecaoDeVeiculos.controller.Formatter.info'}" state="{parts: [{path: 'Status'}], formatter:'com.sap.build.standard.formInspecaoDeVeiculos.controller.Formatter.infoState'}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>